<?xml version="1.0" encoding="utf-8"?>
<!-- activity_note_organization.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with App Name and User Profile Picture -->
    <!-- Use appropriate views or widgets for displaying the app name and user profile picture -->

    <!-- List of Folders/Tags -->
    <ImageView
        android:id="@+id/applogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quick Notes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <ListView
        android:id="@+id/foldersListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_marginTop="16dp"/>

    <!-- Section to Display Related Notes -->
    <ListView
        android:id="@+id/relatedNotesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/foldersListView"
        android:layout_marginTop="16dp"/>

    <!-- Button to Create New Folder/Tag -->
    <Button
        android:id="@+id/createFolderTagButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Folder/Tag"
        android:layout_below="@id/relatedNotesListView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
